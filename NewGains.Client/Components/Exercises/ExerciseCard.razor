<li class="exercise-card">
    <h6 class="exercise-card-header">
        <span class="exercise-card-name" @onclick="@(() => NavigateToExerciseDetails(Exercise.Id))">@Exercise.Name</span>
        @if (!string.Equals(Exercise.Category, "Bodyweight")
          && !string.Equals(Exercise.Category, "Cardio"))
        {
            <span class="exercise-card-dash">-</span>
            <span class="exercise-card-category">@Exercise.Category</span>
        }
    </h6>
    <ExerciseCardOptions ExerciseId="@Exercise.Id" />
</li>