@page "/templates"
@using NewGains.Client.Components.Templates

<PageTitle>Workout Templates</PageTitle>

<h1>Templates</h1>

@if (Templates is null)
{
    <p class="loading-element"><i class="fa-solid fa-spinner fa-spin"></i></p>
}
else
{
    <AuthorizeView>
        <a class="btn btn-primary" href="/templates/edit">Add Template</a>
    </AuthorizeView>
    <ol class="templates-list">
       @foreach (var template in Templates)
       {
           <TemplateCard Template="@template" />
       }
    </ol>
}